    <title>Database CRUD</title>


    <style>
        /* Animated Gradient Background */
        @keyframes gradientAnimation {
            0% {
                background-position: 0% 50%;
            }

            50% {
                background-position: 100% 50%;
            }

            100% {
                background-position: 0% 50%;
            }
        }

        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            text-align: center;
            background: linear-gradient(-45deg, #ff00ff, #ff9900, #00ffff, #ff0099);




            background-size: 400% 400%;
            animation: gradientAnimation 10s ease infinite;
        }

        .container {
            width: 40%;
            background: linear-gradient(-45deg, #0d1b2a, #1b263b, #415a77, #778da9);
            color: white;
            padding: 20px;
            margin: 50px auto;
            box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.3);
            border-radius: 12px;
        }

        h2 {
            color: #fff;
        }

        table {
            width: 100%;
        }

        td {
            padding: 10px;
            font-size: 16px;
        }

        input[type="text"],
        input[type="date"],
        input[type="file"],
        input[type="number"] {
            width: 100%;
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .button {
            display: inline-block;
            padding: 10px 20px;
            text-decoration: none;
            color: white;
            background-color: #007BFF;
            border-radius: 5px;
            font-weight: bold;
        }

        .button:hover {
            background-color: #0056b3;
        }

        input[type="submit"] {
            background-color: #28a745;
            color: white;
            padding: 11px 20px;
            border: none;
            cursor: pointer;
            border-radius: 5px;
            font-weight: bold;
        }

        input[type="submit"]:hover {
            background-color: #218838;
        }

        .form-actions {
            text-align: center;
            margin-top: 15px;
        }
    </style>


</head>

