<div align="center" class="table-container">
    <h2>Books Information</h2>
    <table border="1">
        <thead>
            <tr>
                <th>#</th>
                <th>BookName</th>
                <th>Author</th>
                <th>Publication Date</th>
                <th>Image</th>
                <th>Price</th>
                <th>Description</th>
                <th>Quantity</th>
                <th colspan="2">Actions</th>
            </tr>
        </thead>
        <tbody>
            <% users.map((user, i)=> { %>
                <tr>
                    <td>
                        <%= i+1 %>
                    </td>
                    <td>
                        <%= user.bookname %>
                    </td>
                    <td>
                        <%= user.author %>
                    </td>
                    <td>
                        <%= user.publicationdate %>
                    </td>
                    <td>
                        <img src="/<%= user.image %>" width="100" height="100" alt="Book Image">
                    </td>

                    <td>
                        <%= user.price %>
                    </td>
                    <td>
                        <%= user.description %>
                    </td>
                    <td>
                        <%= user.quantity %>
                    </td>
                    <td><a href="/edit-user/<%= user.id %>" class="edit-btn">Edit</a></td>
                    <td><a href="/delete-user/<%= user.id %>" class="delete-btn">Delete</a></td>
                </tr>
                <% }) %>
        </tbody>
    </table>
    <br>
    <a href="/" class="back-button">Back to Main Page</a>
</div>

