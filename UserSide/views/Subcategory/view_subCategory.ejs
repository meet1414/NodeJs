<%- include('../header') %>

<style>
    /* Wrapper & Font */
    .page-wrapper {
        background: #fefcf8;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        padding: 20px;
    }
    
    /* Breadcrumb */
    .breadcrumb {
        background-color: transparent;
        padding: 0;
        margin: 0;
    }
    .breadcrumb-item a {
        color: #f5b301;
        font-weight: bold;
    }
    .breadcrumb-item.active {
        color: #555;
    }
    
    /* Card Styling */
    .card {
        border: none;
        border-radius: 15px;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.08);
        background: #fff;
        transition: transform 0.3s ease;
    }
    .card:hover {
        transform: translateY(-4px);
    }
    
    /* Card Title */
    .card-title {
        color: #f5b301;
        font-weight: bold;
        font-size: 20px;
        margin-bottom: 20px;
    }
    
    /* Table Styling */
    .table {
        background-color: #fff;
        border-radius: 10px;
        overflow: hidden;
    }
    .table thead {
        background-color: #f5b301;
        color: #fff;
    }
    .table th, .table td {
        vertical-align: middle;
        text-align: center;
        padding: 12px;
    }
    .table img {
        width: 80px;
        height: 80px;
        object-fit: cover;
        border-radius: 10px;
        border: 1px solid #ddd;
    }
    
    /* Buttons */
    .btn-primary {
        background-color: #ffc107;
        border: none;
        color: #000;
        font-weight: 500;
        transition: 0.3s;
    }
    .btn-primary:hover {
        background-color: #e0a800;
    }
    
    .btn-danger {
        background-color: #dc3545;
        border: none;
        transition: 0.3s;
    }
    .btn-danger:hover {
        background-color: #c82333;
    }
    
    /* Responsive tweaks */
    @media (max-width: 768px) {
        .table th, .table td {
            font-size: 14px;
            padding: 8px;
        }
        .table img {
            width: 60px;
            height: 60px;
        }
    }
    </style>
    

<div class="page-wrapper">
    <div class="page-breadcrumb">
        <div class="row">
            <div class="col-12 d-flex no-block align-items-center">
                <!-- <h4 class="page-title">Sub Category Table</h4> -->
                <div class="ml-auto text-right">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Sub Category</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid" style="padding: 30px;">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Sub Category Information</h5>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Category Name</th>
                                    <th>Category Image</th>
                                    <th>Sub Category Name</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% subCategories.map((subCate, i) => { %>
                                    <tr>
                                        <td><%= i + 1 %></td>
                                        <td><%= subCate.category ? subCate.category.category : 'N/A' %></td>
                                        <td>
                                            <% if (subCate.category && subCate.category.categoryImage) { %>
                                                <img src="<%= subCate.category.categoryImage %>" alt="Category Image" height="80" width="80" />
                                            <% } else { %>
                                                <span>No image</span>
                                            <% } %>
                                        </td>
                                        <td><%= subCate.subCategory %></td>
                                        <td class="action-icons">
                                            <a href="/subCategory/edit-subcategory/<%= subCate._id %>" class="btn btn-sm btn-primary" title="Edit">
                                                <i class="fas fa-edit"></i> Edit
                                            </a>
                                            <a href="/subCategory/delete-subcategory/<%= subCate._id %>" class="btn btn-sm btn-danger" title="Delete"
                                               onclick="return confirm('Are you sure you want to delete this subcategory?')">
                                                <i class="fas fa-trash-alt"></i> Delete
                                            </a>
                                        </td>
                                    </tr>
                                    
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../footer') %>
