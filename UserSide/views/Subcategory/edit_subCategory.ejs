<%- include('../header') %>

<style>
    .page-breadcrumb {
        background-color: #f4f6f9;
        padding: 20px 30px;
        border-bottom: 1px solid #dee2e6;
    }

    .page-title {
        font-size: 22px;
        font-weight: 600;
        color: #343a40;
    }

    .breadcrumb {
        background: none;
        margin-bottom: 0;
    }

    .card {
        border-radius: 12px;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.08);
        border: none;
    }

    .card-title {
        font-size: 20px;
        font-weight: bold;
        color: #495057;
        margin-bottom: 20px;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-control {
        border-radius: 8px;
        padding: 10px 15px;
        border: 1px solid #ced4da;
        transition: border-color 0.3s ease;
    }

    .form-control:focus {
        border-color: #007bff;
        box-shadow: none;
    }

    .btn-primary {
        background-color: #333;
        border-color: #fff;
        padding: 10px 25px;
        border-radius: 8px;
        font-size: 16px;
    }

    .btn-primary:hover {
        background-color: #0056b3;
        border-color: #0056b3;
    }

    .text-right {
        text-align: right;
    }

    .card-body h4 {
        margin-bottom: 30px;
        color: #212529;
    }

    select.form-control {
        cursor: pointer;
    }
</style>

<div class="page-wrapper">
    <div class="page-breadcrumb">
        <div class="row">
            <div class="col-12 d-flex no-block align-items-center">
                <h4 class="page-title">Form Basic</h4>
                <div class="ml-auto text-right">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Edit Sub Category</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid" style="padding: 30px;">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <form class="form-horizontal" action="/subCategory/edit-subcategory/<%= subCategory._id %>" method="POST">
                        <div class="card-body">
                            <h4 class="card-title">Edit Sub Category Info</h4>
                            
                            <div class="form-group row">
                                <label for="category" class="col-sm-3 text-right control-label col-form-label">Category Name</label>
                                <div class="col-sm-9">
                                    <select class="form-control" name="category" required>
                                        <option value="">Select Category</option>
                                        <% categories.forEach((cat) => { %>
                                            <option value="<%= cat._id %>" <% if (cat._id.toString() === subCategory.category.toString()) { %> selected <% } %>>
                                                <%= cat.category %>
                                            </option>
                                        <% }) %>
                                    </select>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="subCategory" class="col-sm-3 text-right control-label col-form-label">Sub Category Name</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" id="subCategory" name="subCategory" value="<%= subCategory.subCategory %>" required>
                                </div>
                            </div>

                        </div>
                        <div class="border-top">
                            <div class="card-body text-right">
                                <button type="submit" class="btn btn-primary">Update Sub Category</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../footer') %>
