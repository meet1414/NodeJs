<%- include('../header') %>

<style>
    /* Color Theme */
:root {
  --primary-color: #f7ca18; /* Yellow */
  --secondary-color: #2c3e50;
  --text-color: #333;
  --bg-color: #fdfdfd;
  --border-radius: 12px;
  --box-shadow: 0 4px 10px rgba(0, 0, 0, 0.08);
}

/* Page Wrapper */
.page-wrapper {
  background-color: #fafafa;
  padding: 40px 20px;
}

/* Page Title */
.page-title {
  font-size: 30px;
  font-weight: 700;
  color: var(--secondary-color);
}

/* Search Bar */
.custom-search-wrapper {
  margin: 30px auto;
  text-align: center;
}

.custom-search-form {
  display: flex;
  justify-content: center;
  gap: 10px;
  flex-wrap: wrap;
}

.custom-search-form input[type="text"] {
  padding: 12px 20px;
  width: 300px;
  border-radius: var(--border-radius);
  border: 1px solid #ccc;
  transition: 0.3s;
}

.custom-search-form input[type="text"]:focus {
  border-color: var(--primary-color);
  box-shadow: 0 0 5px var(--primary-color);
}

.custom-search-form .btn {
  background-color: var(--primary-color);
  color: white;
  padding: 12px 24px;
  border: none;
  border-radius: var(--border-radius);
  transition: 0.3s;
}

.custom-search-form .btn:hover {
  background-color: #e1b400;
}

/* Category Filters */
.category-filters {
  margin: 30px 0;
}

.category-btn {
  margin: 5px;
  border-radius: 25px;
  padding: 8px 20px;
  font-weight: 500;
  text-transform: capitalize;
}

/* Product Grid */
.product-grid {
  padding: 10px;
}

.product-card {
  background-color: white;
  border-radius: var(--border-radius);
  box-shadow: var(--box-shadow);
  margin-bottom: 30px;
  overflow: hidden;
  transition: transform 0.3s ease;
}

.product-card:hover {
  transform: translateY(-5px);
}

/* Discount Badge */
.product-badge {
  position: absolute;
  background-color: #e74c3c;
  color: white;
  font-size: 12px;
  padding: 4px 8px;
  border-radius: 4px;
  top: 10px;
  left: 10px;
  z-index: 10;
}

/* Product Image */
.product-img-container {
  width: 100%;
  height: 230px;
  overflow: hidden;
  position: relative;
}

.product-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}

/* Product Info */
.product-info {
  padding: 15px;
}

.product-title {
  font-size: 18px;
  font-weight: 600;
  color: var(--text-color);
  margin-bottom: 5px;
}

.product-category {
  font-size: 13px;
  color: gray;
  margin-bottom: 8px;
}

.product-desc {
  font-size: 14px;
  color: #555;
  min-height: 45px;
  margin-bottom: 10px;
}

/* Footer with price and button */
.product-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.product-price {
  font-size: 18px;
  font-weight: bold;
  color: #27ae60;
}

.view-btn {
  background-color: var(--primary-color);
  color: white;
  padding: 8px 14px;
  border-radius: 6px;
  font-size: 14px;
  transition: background-color 0.3s ease;
  text-decoration: none;
}

.view-btn:hover {
  background-color: #e1b400;
}

/* Empty State */
.empty-state {
  text-align: center;
  padding: 60px 20px;
  color: #aaa;
}

.empty-state i {
  font-size: 50px;
  margin-bottom: 10px;
}

.empty-state h4 {
  font-size: 24px;
  color: var(--secondary-color);
}

.empty-state p {
  max-width: 400px;
  margin: 0 auto 20px;
}

.empty-state .btn-primary {
  background-color: var(--primary-color);
  border: none;
  padding: 10px 20px;
  border-radius: var(--border-radius);
}

/* Responsive Grid Fix */
@media (max-width: 768px) {
  .product-img-container {
    height: 180px;
  }
}

</style>

<div class="page-wrapper">
    <div class="container-fluid">
        <!-- Page Header -->
        <div class="page-breadcrumb">
            <div class="row">
                <div class="col-12 d-flex no-block align-items-center">
                    <h2 class="page-title">Our Products</h2>
                    <div class="ml-auto text-right">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/">Home</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Products</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>

        <!-- Search Bar -->
        <div class="custom-search-wrapper">
            <form method="GET" action="/product/view-product" class="custom-search-form">
                <input type="text" name="search" class="form-control" placeholder="Search for products..."
                    value="<%= typeof search !== 'undefined' ? search : '' %>">
                <button type="submit" class="btn">Search</button>
            </form>
        </div>

        <!-- Category Filters -->
        <div class="category-filters text-center">
            <% const colors=['primary', 'success', 'danger', 'info', 'warning', 'dark']; %>
            <a class="btn btn-dark category-btn category-btn-all" href="/product/view-product">All Products</a>
            <% categories.forEach((category, index)=> {
                const colorClass = colors[index % colors.length];
                %>
                <a class="btn btn-<%= colorClass %> category-btn"
                    href="/product/view-product?category=<%= category._id %>">
                    <%= category.category %>
                </a>
                <% }); %>
        </div>

        <!-- Product Grid -->
        <div class="product-grid">
            <% if (allProducts.length === 0) { %>
                <div class="empty-state">
                    <i class="fas fa-box-open"></i>
                    <h4>No Products Found</h4>
                    <p>We couldn't find any products matching your criteria. Try adjusting your search or browse our full
                        catalog.</p>
                    <a href="/product/view-product" class="btn btn-primary">View All Products</a>
                </div>
                <% } else { %>
                    <div class="row">
                        <% allProducts.forEach((product)=> { %>
                            <div class="col-lg-3 col-md-4 col-sm-6">
                                <div class="product-card">

                                    <% if (product.discount) { %>
                                        <span class="product-badge"><%= product.discount %>% OFF</span>
                                        <% } %>
                                            <div class="product-img-container">
                                                <img src="<%= product.productImage %>" alt="<%= product.title %>"
                                                    class="product-img">
                                            </div>
                                            <div class="product-info">
                                                <h6 class="product-title">
                                                    <%= product.title %>
                                                </h6>
                                                <p class="product-category">
                                                    <%= product.category?.category || 'Uncategorized' %>
                                                </p>
                                                <p class="product-desc">
                                                    <%= product.desc.length> 80 ? product.desc.substring(0, 80) + '...' :
                                                        product.desc %>
                                                </p>
                                                <div class="product-footer">
                                                    <span class="product-price">â‚¹<%= product.price %></span>
                                                    <a href="/product/single-product/<%= product._id %>"
                                                        class="view-btn">View</a>
                                                </div>
                                            </div>
                                </div>
                            </div>
                            <% }); %>
                    </div>
                    <% } %>
        </div>
    </div>
</div>

<%- include('../footer') %>

