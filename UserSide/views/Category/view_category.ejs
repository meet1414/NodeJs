<%- include('../header') %>

<style>
    /* Page Wrapper */
    .page-wrapper {
        background: #fdf9f3;
        padding: 20px;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
    
    /* Breadcrumb Styling */
    .breadcrumb {
        background: transparent;
        margin-bottom: 0;
        padding: 0;
    }
    .breadcrumb-item a {
        color: #f5b301;
        font-weight: bold;
    }
    .breadcrumb-item.active {
        color: #555;
    }
    
    /* Card Styling */
    .card {
        border: none;
        border-radius: 15px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        overflow: hidden;
        transition: transform 0.3s ease;
        background: #fff;
    }
    .card:hover {
        transform: translateY(-5px);
    }
    
    /* Card Title */
    .card-body h5 {
        color: #f5b301;
        font-weight: bold;
    }
    
    /* Table Styling */
    .table-bordered {
        border: 1px solid #ddd;
        background-color: #fff;
    }
    .table-bordered th {
        background-color: #f5b301;
        color: #fff;
        text-align: center;
        vertical-align: middle;
    }
    .table-bordered td {
        vertical-align: middle;
        text-align: center;
    }
    
    /* Image Styling */
    .table img {
        border-radius: 10px;
        object-fit: cover;
    }
    
    /* Buttons */
    .btn-primary {
        background-color: #ffc107;
        border-color: #ffc107;
        color: #000;
    }
    .btn-primary:hover {
        background-color: #e0a800;
        border-color: #d39e00;
    }
    
    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }
    .btn-danger:hover {
        background-color: #c82333;
        border-color: #bd2130;
    }
    </style>
    

<div class="page-wrapper">
    <div class="page-breadcrumb">
        <div class="row">
            <div class="col-12 d-flex no-block align-items-center">
                <!-- <h4 class="page-title">View Categories</h4> -->
                <div class="ml-auto text-right">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Categories</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title m-b-0">Category Information</h5>
                    </div>
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Category Name</th>
                                <th>Category Image</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% categories.map((category, i) => { %>
                                <tr>
                                    <td><%= i + 1 %></td>
                                    <td><%= category.category %></td>
                                    <td>
                                        <img src="<%= category.categoryImage %>" height="100" width="100" alt="Category Image" />
                                    </td>
                                    <td>
                                        <a href="/category/edit-category/<%= category._id %>" class="btn btn-sm btn-primary">
                                            <i class="fas fa-edit"></i> Edit
                                        </a>
                                        <a href="/category/delete-category/<%= category._id %>" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this category?');">
                                            <i class="fas fa-trash-alt"></i> Delete
                                        </a>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../footer') %>
