<%- include('../header') %>

<div class="page-wrapper" style="background: #f4f6f9; min-height: 100vh; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">

    <div class="page-breadcrumb" 
    style="background: linear-gradient(135deg, #6a11cb, #2575fc); padding: 20px 0; color: #fff; box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);">
   <div class="row" 
        style="max-width: 1200px; margin: 0 auto; display: flex; justify-content: space-between; align-items: center;">
       
       <h4 class="page-title" 
           style="font-size: 26px; font-weight: bold; letter-spacing: 1px; margin: 0;">
            Add Blog
       </h4>

       <nav aria-label="breadcrumb">
           <ol class="breadcrumb" 
               style="background: none; margin-bottom: 0; padding: 0; display: flex; gap: 10px;">
               
               <li class="breadcrumb-item" style="list-style: none;">
                   <a href="/" 
                      style="color: #ffeb3b; text-decoration: none; font-weight: bold; font-size: 16px; transition: 0.3s;">
                       Home
                   </a>
               </li>
               <li class="breadcrumb-item active" aria-current="page" 
                   style="color: #f1f1f1; font-size: 16px;">
                   Add Blog
               </li>
           </ol>
       </nav>

   </div>
</div>

    <!-- Form Section -->
    <div class="container-fluid" style="padding: 80px 0;">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div style="background: #fff; box-shadow: 0 12px 30px rgba(0, 0, 0, 0.1); border-radius: 16px; overflow: hidden; transition: 0.4s; transform: translateY(0);">
                    
                    <form class="form-horizontal" action="/blogs/add-blog" method="POST" enctype="multipart/form-data" 
                          style="padding: 50px; transition: 0.4s;">

                        <!-- Form Header -->
                        <h4 style="color: #007bff; font-size: 30px; font-weight: bold; margin-bottom: 40px; text-align: center; 
                                   text-transform: uppercase; letter-spacing: 2px;">
                            üìù Blog Details
                        </h4>

                        <!-- Title -->
                        <div style="margin-bottom: 30px;">
                            <label style="font-weight: bold; color: #495057; font-size: 18px;">Title</label>
                            <input type="text" name="title" placeholder="Enter Blog Title" required
                                   style="width: 100%; padding: 18px; border: 2px solid #ced4da; border-radius: 10px; 
                                          transition: 0.3s; box-shadow: inset 0 3px 6px rgba(0,0,0,0.1); 
                                          font-size: 16px; color: #333;">
                            <small style="color: #6c757d;">Keep the title concise and clear.</small>
                        </div>

                        <!-- Description -->
                        <div style="margin-bottom: 30px;">
                            <label style="font-weight: bold; color: #495057; font-size: 18px;">Description</label>
                            <textarea name="description" rows="5" placeholder="Enter Blog Description" required
                                      style="width: 100%; padding: 18px; border: 2px solid #ced4da; border-radius: 10px; 
                                             transition: 0.3s; box-shadow: inset 0 3px 6px rgba(0,0,0,0.1); 
                                             font-size: 16px; color: #333;"></textarea>
                        </div>

                        <!-- Author -->
                        <div style="margin-bottom: 30px;">
                            <label style="font-weight: bold; color: #495057; font-size: 18px;">Author</label>
                            <input type="text" name="author" placeholder="Enter Author Name" required
                                   style="width: 100%; padding: 18px; border: 2px solid #ced4da; border-radius: 10px; 
                                          transition: 0.3s; box-shadow: inset 0 3px 6px rgba(0,0,0,0.1); 
                                          font-size: 16px; color: #333;">
                        </div>

                        <!-- Category -->
                        <div style="margin-bottom: 30px;">
                            <label style="font-weight: bold; color: #495057; font-size: 18px;">Category</label>
                            <select name="category" required
                                    style="width: 100%; padding: 18px; border: 2px solid #ced4da; border-radius: 10px; 
                                           transition: 0.3s; box-shadow: inset 0 3px 6px rgba(0,0,0,0.1); 
                                           font-size: 16px; color: #333; cursor: pointer;">
                                <option value="">Select Category</option>
                                <option value="Finance">Finance</option>
                                <option value="Design and Development">Design and Development</option>
                                <option value="Sales">Fashion</option>
                                <option value="News">News</option>
                                <option value="Business">Business</option>
                                <option value="Business">Technology</option>
                            </select>
                        </div>

                        <!-- Upload Image -->
                        <div style="margin-bottom: 40px;">
                            <label style="font-weight: bold; color: #495057; font-size: 18px;">Upload Image</label>
                            <input type="file" name="image" required
                                   style="width: 100%; padding: 18px; border: 2px solid #ced4da; border-radius: 10px; 
                                          transition: 0.3s; box-shadow: inset 0 3px 6px rgba(0,0,0,0.1); 
                                          cursor: pointer; font-size: 16px; color: #495057;">
                        </div>

                        <!-- Submit Button -->
                        <div style="text-align: center; margin-top: 40px;">
                            <button type="submit" 
                                    style="background: linear-gradient(135deg, #28a745, #218838); color: #fff; 
                                           padding: 18px 50px; border: none; border-radius: 10px; font-size: 20px; 
                                           cursor: pointer; transition: 0.4s; box-shadow: 0 8px 20px rgba(0,0,0,0.2);">
                                <i class="mdi mdi-check" style="margin-right: 8px;"></i> Add Blog
                            </button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>

</div>

<%- include('../footer') %>
