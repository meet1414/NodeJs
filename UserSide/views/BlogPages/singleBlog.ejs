<%- include('../header') %>

<div class="page-wrapper" 
     style="background: #f4f6f9; min-height: 100vh; padding: 40px 0;">

    <div class="container-fluid" style="max-width: 1200px; margin: 0 auto;">

        <div class="row justify-content-center">
            <div class="col-lg-10 col-md-12">

                <!-- Blog Card -->
                <div class="card shadow-lg" 
                     style="border-radius: 12px; transition: 0.3s; max-height: 600px;">

                    <!-- Header -->
                    <div class="card-header bg-primary text-white" 
                         style="padding: 30px; font-size: 28px; font-weight: bold;">
                        <%= blog.title %>
                    </div>

                    <!-- Body -->
                    <div class="card-body" 
                         style="padding: 40px; display: flex; flex-wrap: wrap; align-items: center;">

                        <div class="row" style="width: 100%;">

                            <!-- Blog Image -->
                            <div class="col-md-6 d-flex justify-content-center">
                                <img src="<%= blog.image %>" alt="Blog Image" 
                                     class="img-fluid rounded shadow" 
                                     style="max-height: 380px; width: 100%; object-fit: cover; transition: 0.3s;">
                            </div>

                            <!-- Blog Details -->
                            <div class="col-md-6 d-flex flex-column justify-content-center">
                                <h5 class="mt-3" style="font-size: 22px; color: #333;">
                                    <i class="fas fa-user" style="color: #007bff;"></i> Author: 
                                    <span style="font-weight: bold;"><%= blog.author %></span>
                                </h5>

                                <p class="text-muted" style="font-size: 16px; margin: 15px 0;">
                                    <i class="fas fa-calendar-alt" style="color: #28a745;"></i> 
                                    Published on: 
                                    <span style="font-weight: bold;">
                                        <%= new Date(blog.createdAt).toDateString() %>
                                    </span>
                                </p>

                                <span class="badge" 
                                      style="background: #ff9800; color: #fff; 
                                             font-size: 16px; padding: 8px 16px; border-radius: 20px;">
                                     <%= blog.category %>
                                </span>

                                <div class="mt-4">
                                    <h5 style="font-size: 20px; color: #555;"> Description:</h5>
                                    <p style="font-size: 18px; line-height: 1.6; color: #444;">
                                        <%= blog.description %>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Footer with Buttons -->
                    <div class="card-footer d-flex justify-content-between" 
                         style="background: #f1f1f1; padding: 20px;">

                        <a href="/blogs/all-blogs" 
                           class="btn btn-secondary" 
                           style="font-size: 14px; padding: 6px 16px;">
                            <i class="fas fa-arrow-left"></i> Back to Blogs
                        </a>

                        <a href="/blogs/edit-blog/<%= blog._id %>" 
                           class="btn btn-warning" 
                           style="font-size: 14px; padding: 6px 16px;">
                            <i class="fas fa-edit"></i> Edit Blog
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../footer') %>
