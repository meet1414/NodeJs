<%- include("header") %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= blog.title %> | Blog View</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        :root {
            --primary-color: #2c3e50;
            --secondary-color: #3498db;
            --text-color: #34495e;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            line-height: 1.6;
            color: var(--text-color);
            background-color: #f8f9fa;
            margin: 0;
          
        }

        .blog-container {
            max-width: 800px;
            margin: 30px auto;
            background: white;
            border-radius: 12px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            overflow: hidden;
        }

        .blog-header {
            padding: 30px;
            border-bottom: 1px solid #eee;
        }

        .blog-title {
            font-size: 2.5rem;
            margin: 0 0 20px 0;
            color: var(--primary-color);
            font-family: 'Merriweather', serif;
        }

        .meta-info {
            display: flex;
            gap: 20px;
            margin-bottom: 15px;
            color: #7f8c8d;
            font-size: 0.95rem;
        }

        .meta-item {
            display: flex;
            align-items: center;
            gap: 5px;
        }

        .blog-image {
            width: 100%;
            height: 400px;
            object-fit: cover;
            border-radius: 8px;
            margin: 20px 0;
        }

        .stats-container {
            display: flex;
            gap: 25px;
            margin: 20px 0;
            padding: 15px;
            background: #f8f9fa;
            border-radius: 8px;
        }

        .stat-item {
            display: flex;
            align-items: center;
            gap: 8px;
            color: #7f8c8d;
        }

        .tags-container {
            display: flex;
            gap: 10px;
            flex-wrap: wrap;
            margin: 20px 0;
        }

        .tag {
            background: #e8f4fd;
            color: var(--secondary-color);
            padding: 5px 12px;
            border-radius: 20px;
            font-size: 0.85rem;
            font-weight: 500;
        }

        .blog-content {
            padding: 0 30px 30px;
            font-size: 1.1rem;
            line-height: 1.8;
        }

        .action-buttons {
            display: flex;
            gap: 15px;
            margin-top: 30px;
            padding: 30px;
            border-top: 1px solid #eee;
        }

        .btn {
            padding: 10px 20px;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            transition: transform 0.2s, opacity 0.2s;
            font-weight: 500;
        }

        .btn-edit {
            background: var(--secondary-color);
            color: white;
        }

        .btn-delete {
            background: #e74c3c;
            color: white;
        }

        .btn:hover {
            opacity: 0.9;
            transform: translateY(-1px);
        }

        @media (max-width: 768px) {
            .blog-container {
                margin: 15px;
            }

            .blog-header {
                padding: 20px;
            }

            .blog-title {
                font-size: 2rem;
            }

            .blog-content {
                padding: 0 20px 20px;
            }
        }
    </style>
</head>
<body>
    <div class="blog-container">
        <header class="blog-header">
            <h1 class="blog-title"><%= blog.title %></h1>
            
            <div class="meta-info">
                <div class="meta-item">
                    <i class="fas fa-user-edit"></i>
                    <span><%= blog.write %></span>
                </div>
                <div class="meta-item">
                    <i class="fas fa-calendar-alt"></i>
                    <span><%= blog.date %></span>
                </div>
                <div class="meta-item">
                    <i class="fas fa-clock"></i>
                    <span><%= blog.time %></span>
                </div>
                <div class="meta-item">
                    <i class="fas fa-tag"></i>
                    <span><%= blog.category %></span>
                </div>
            </div>

            <img src="/<%= blog.image %>" alt="<%= blog.title %>" class="blog-image">
            <div class="tags-container"> 
              <span class="tag"><%= blog.tags %></span> 
      </div>
        </header>

        <div class="stats-container">
            <div class="stat-item">
                <i class="fas fa-eye"></i>
                <span><%= blog.view %> views</span>
            </div>
            <div class="stat-item">
                <i class="fas fa-heart"></i>
                <span><%= blog.likes %> likes</span>
            </div>
            <div class="stat-item">
                <i class="fas fa-book-open"></i>
                <span><%= blog.read %> reads</span>
            </div>
        </div>

        <div class="blog-content">
            <p class="blog-about"><%= blog.about %></p>
        </div>

        <div class="action-buttons">
            <form action="/blog/edit-blog/<%= blog._id%>">
                <button type="submit" class="btn btn-edit">
                    <i class="fas fa-edit"></i> Edit Article
                </button>
            </form>
            <form method="post" action="/blog/delete-blog/<%= blog._id%>">
                <button type="submit" class="btn btn-delete">
                    <i class="fas fa-trash-alt"></i> Delete Article
                </button>
            </form>
        </div>
    </div>
</body>
</html>
<%- include("footer") %>