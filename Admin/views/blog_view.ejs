<%- include("header") %>
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= blog.title %> | Blog</title>
  <style>
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background-color: #f4f4f9;
      margin: 0;
      padding: 0;
    }
    .blog-container {
      max-width: 900px;
      margin: 40px auto;
      padding: 30px;
      background-color: #fff;
      border-radius: 12px;
      box-shadow: 0 10px 20px rgba(0,0,0,0.1);
      animation: fadeIn 0.5s ease-in-out;
    }
    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }
    h1 {
      color: #333;
      font-size: 2.5em;
      margin-bottom: 10px;
    }
    .blog-meta {
      font-size: 0.95em;
      color: #666;
      margin-bottom: 20px;
    }
    .blog-meta strong {
      color: #222;
    }
    .blog-image {
      width: 100%;
      max-height: 400px;
      object-fit: cover;
      border-radius: 8px;
      margin: 20px 0;
    }
    .stats {
      display: flex;
      gap: 20px;
      font-size: 1em;
      margin-bottom: 20px;
    }
    .stats p {
      margin: 0;
      display: flex;
      align-items: center;
      gap: 5px;
      color: #444;
    }
    .tags, .about {
      margin-bottom: 20px;
    }
    .tags p {
      background-color: #eef;
      display: inline-block;
      padding: 5px 10px;
      border-radius: 6px;
      font-size: 0.9em;
      color: #333;
    }
    .buttons {
      display: flex;
      gap: 15px;
      margin-top: 20px;
    }
    .buttons button {
      padding: 10px 20px;
      background-color: #0057d9;
      color: #fff;
      border: none;
      border-radius: 6px;
      cursor: pointer;
      transition: background-color 0.2s ease;
    }
    .buttons button:hover {
      background-color: #003f9a;
    }
  </style>
</head>
<body>
  <div class="blog-container">
    <article>
      <header>
        <h1><%= blog.title %></h1>
        <div class="blog-meta">
          <p>🖊️ Written by: <strong><%= blog.write %></strong></p>
          <p>📅 Published on: <strong><%= blog.date %></strong> at <strong><%= blog.time %></strong></p>
          <p>📂 Category: <%= blog.category %></p>
        </div>
      </header>

      <img class="blog-image" src="/<%= blog.image %>" alt="<%= blog.title %>" />

      <div class="stats">
        <p>👁️ <%= blog.view %> Views</p>
        <p>❤️ <%= blog.likes %> Likes</p>
        <p>📖 <%= blog.read %> Reads</p>
      </div>

      <div class="tags">
        <p>🏷️ Tags: <%= blog.tags %></p>
      </div>

      <div class="about">
        <p><%= blog.about %></p>
      </div>

      <div class="buttons">
        <form action="/blog/edit-blog/<%= blog._id%>">
          <button type="submit">✏️ Edit</button>
        </form>
        <form method="post" action="/blog/delete-blog/<%= blog._id%>">
          <button type="submit">🗑️ Delete</button>
        </form>
      </div>
    </article>
  </div>
</body>
</html>
<%- include("footer") %>
