<%- include('header') %>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Profile</title>
  <style>
    body, html {
      height: 100%;
      margin: 0;
    }

    .center-container {
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100%;
      background-color: #f9f9f9;
    }

    .profile {
      background: white;
      padding: 30px;
      border-radius: 10px;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
      max-width: 400px;
      width: 100%;
    }

    .profile img {
      max-width: 100%;
      height: auto;
      border-radius: 50%;
      margin-bottom: 15px;
    }

    .profile ul {
      list-style-type: none;
      padding: 0;
    }

    .profile li {
      margin-bottom: 10px;
    }
  </style>
</head>
<body>
  <div class="center-container">
    <% if (admin) { %>
      <div class="profile">
        <h2>Admin Profile</h2>
        <img src="<%= admin.profileImage %>" alt="Admin Image">
        <ul>
          <li><strong>First Name:</strong> <%= admin.firstname %></li>
          <li><strong>Last Name:</strong> <%= admin.lastname %></li>
          <li><strong>Email:</strong> <%= admin.email %></li>
          <li><strong>Password:</strong> <%= admin.password %></li>
          <li><strong>Gender:</strong> <%= admin.gender %></li>
          <li><strong>Hobbies:</strong> <%= admin.hobbies %></li>
          <li><strong>Mobile No:</strong> <%= admin.mobileNo %></li>
        </ul>
      </div>
    <% } else { %>
      <p>Admin data is not available.</p>
    <% } %>
  </div>
</body>
</html>

<%- include('footer') %>
